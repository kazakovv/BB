<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.victor.sexytalk.sexytalk.UserInterfaces.ActivitySexyCalendar">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <TextView
        android:id="@+id/cycleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/default_padding"
        android:textColor="@color/apptheme_color"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:textSize="@dimen/title_cycle_period"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phase_description"
        android:textColor="@color/apptheme_color"
        android:textStyle="italic"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_padding"
        android:textSize="@dimen/subtitle_description_calendar"/>
    <TextView
        android:id="@+id/remainingDaysMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:textSize="@dimen/remaining_days_in_period"
        android:layout_marginBottom="@dimen/default_padding"
        android:textColor="@color/second_accent_color"
        android:text="@string/sub_title_remaining_days"/>

    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
