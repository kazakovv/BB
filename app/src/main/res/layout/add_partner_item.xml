<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thumbnail_partner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/message_list_vertical_margin"
        android:paddingBottom="@dimen/message_list_vertical_margin"
        android:src="@drawable/ic_action_person_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:paddingLeft="@dimen/message_list_vertical_margin"
        android:layout_centerVertical="true"
        android:id="@+id/partnerUsername"
        android:layout_alignBottom="@+id/thumbnail_partner"
        android:layout_toRightOf="@+id/thumbnail_partner"
        android:layout_toEndOf="@+id/thumbnail_partner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addPartnerButton"
        android:layout_alignBottom="@+id/partnerUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>