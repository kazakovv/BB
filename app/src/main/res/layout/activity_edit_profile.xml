<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victor.sexytalk.sexytalk.UserInterfaces.EditProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <ImageView
        android:layout_width="@dimen/thumbnail_width"
        android:layout_height="@dimen/thumbnail_height"
        android:id="@+id/profilePicture"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_person_black"

        android:layout_marginTop="@dimen/default_padding"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
         />
<!--
    <ImageView
        android:id="@+id/thumbnail_frame"
        android:src="@drawable/frame_thumbnail"
        android:layout_width="@dimen/thumbnail_width_frame"
        android:layout_height="@dimen/thumbnail_height_frame"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar" />
-->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_below="@+id/profilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
