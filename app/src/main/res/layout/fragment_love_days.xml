<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.victor.sexytalk.sexytalk.FragmentLoveDays">

    <!-- TODO: Update blank fragment layout -->




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_private_days_dialog_button"
        android:id="@+id/showPrivateDaysDialog"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title of cycle stage"
        android:id="@+id/cyclePhase"
        android:layout_below="@+id/showPrivateDaysDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sexy status"
        android:id="@+id/sexyStatus"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/cyclePhase"
        android:layout_alignRight="@+id/cyclePhase"
        android:layout_alignEnd="@+id/cyclePhase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
